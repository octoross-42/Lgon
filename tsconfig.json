{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "ES2022",
	  "moduleResolution": "node",
	  "baseUrl": "./",
	  "outDir": "build",
	  "rootDir": "src",
	  "strict": true, // enable all strict type checking options when compiling ts
	  "esModuleInterop": true, // comptatible with import modules
	  "skipLibCheck": true,
	  "typeRoots": ["node_modules/@types", "types"],
	  "paths": {
		"@config/*": ["src/config/*"],
		"@types/*": ["types/*"],
	  }
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}